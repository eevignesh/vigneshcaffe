layers {
  name: "slice_emb"
  type: SLICE
  bottom: "ip2"
  #top: "target_emb"
  top: "context_emb_1"
  top: "context_emb_2"
  #top: "context_emb_3"
  #top: "context_emb_4"
  slice_param {
    slice_dim: 0
  }
}

layers {
  name: "concat_context_emb"
  type: CONCAT
  bottom: "context_emb_1"
  bottom: "context_emb_2"
  bottom: "video_id_emb"
  top: "context_feature"
  concat_param {
    concat_dim: 1  
  }
}

