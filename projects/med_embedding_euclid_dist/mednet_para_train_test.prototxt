name: "med_c5_euclid_d4096"
layers {
  name: "shot_windows"
  type: VIDEO_SHOT_WINDOW_DATA
  top: "data"
  top: "video_id"
  video_shot_window_data_param {
    source: "/data2/vigneshr/ICCV2015/data/med_dev_event_kit_shot_c3_lmdb_revised"
    backend: LMDB
    batch_size: 128
  }

  include: { phase: TRAIN }
}


layers {
  name: "video_id_embedding"
  type: ID_TO_WEIGHT_MAPPING
  bottom: "video_id"
  top: "video_id_emb"
  id_to_weight_mapping_param {
    num_output: 4096
    max_ids: 6000
    weight_filler {
      type: "xavier"
#      type: "gaussian"
#      mean: 0.0
#      std: 0.1
    }
  }   
}

