layers {
  name: "target_score_pred"
  type: INNER_PRODUCT
  bottom: "context_feature"
  top: "target_score"
  blobs_lr: 1
  blobs_lr: 2
  inner_product_param {
    num_output: 4097
    weight_filler {
      type: "xavier"
#      mean: 0.0
#      std: 0.1
    }
    bias_filler {
      type: "constant"
    }
  }
}

layers {
  name: "flatten"
  type: FLATTEN
  bottom: "target_datum"
  top: "target_datum_flat"  
}

layers {
  name: "euclid_loss"
  type: EUCLIDEAN_LOSS
  bottom: "target_score"
  bottom: "target_datum_flat"
  top: "loss_output"
}
