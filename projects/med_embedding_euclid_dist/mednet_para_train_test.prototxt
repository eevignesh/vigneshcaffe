layers {
  name: "slice_input_data"
  type: SLICE
  bottom: "data"
  top: "target_datum"
  top: "context_datum_1"
  top: "context_datum_2"
  #top: "context_datum_3"
  #top: "context_datum_4"
  slice_param {
    slice_dim: 1  
  }
}

layers {
  name: "batch_concat_input"
  type: CONCAT
  #bottom: "target_datum"
  bottom: "context_datum_1"
  bottom: "context_datum_2"
  #bottom: "context_datum_3"
  #bottom: "context_datum_4"
  top: "concat_input_datums"
  concat_param {
    concat_dim: 0  
  }
}

layers {
  name: "word_embedding_0"
  type: INNER_PRODUCT
  bottom: "concat_input_datums"
  top: "ip1"
  blobs_lr: 1
  blobs_lr: 2
  inner_product_param {
    num_output: 4096
    weight_filler {
      type: "xavier"
#      type: "gaussian"
#      mean: 0.0
#      std: 0.1
    }
    bias_filler {
      type: "constant"
    }
  }
}

layers {
  name: "word_embedding"
  type: INNER_PRODUCT
  bottom: "ip1"
  top: "ip2"
  blobs_lr: 1
  blobs_lr: 2
  inner_product_param {
    num_output: 4096
    weight_filler {
      type: "xavier"
#      type: "gaussian"
#      mean: 0.0
#      std: 0.1
    }
    bias_filler {
      type: "constant"
    }
  }
}

